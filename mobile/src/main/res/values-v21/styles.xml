<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Main theme colors -->
        <item name="android:windowBackground">@color/white</item>
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/ipa</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/amber_ale</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/pale_lager</item>
        <!--   primary text color -->
        <item name="android:textColorPrimary">@color/imperial_stout</item>
    </style>
</resources>
