<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/beer_card"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Light lager"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="7"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/light_lager" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="Light lager"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="5 weeks"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/amber_ale" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="3,4%"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/amber_ale" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="3.4 IBU"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/amber_ale" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="5.5 EBC"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/amber_ale" />

        ï»¿

        <Button
            android:id="@+id/buttonBrew"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:onClick="buttonBrewPressed"
            android:padding="16dp"
            android:text="Brew this" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_row="5"
            android:background="@color/divider" />

    </GridLayout>

</android.support.v7.widget.CardView>